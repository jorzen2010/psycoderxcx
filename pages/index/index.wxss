.psycontainer{
  background-color: #eeeeee;
  width: 100%;
  height: 100%;
  display:flex;
  flex-direction:column;
}
.avatarcontainer{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #ffffff;
  padding-bottom: 10px;
}
.title{
  font-size:30pt;
  font-weight: 500;
}
.info{
  text-align: center;
  padding: 5px 10px;
  color: #cccccc;
}
.avatar{
  margin-top: 20px;
  border: 5px solid #eeeeee;
  border-radius:10%; 
  width: 150px;
  height: 150px;
}


.infocontainer{
  padding: 10px;
  background-color: #ffffff;
}
.info_title{
  font-size: 14pt;
  font-weight: 600;
  color: #353535;
  margin: 5px 0 5px 5px;
  padding-left: 5px;
  border-left: 5px solid gold;
}
.info_content{
  font-size: 12pt;
  color: #888888;
  line-height: 25px;
}

.btncontainer{
  display:flex;
  flex-direction:row;
  justify-content:space-around;
  background-color: #ffffff;
  margin-bottom: 20px;
  padding-bottom: 20px;
  padding-top: 10px;
}
.psybtncontainer{
 display:flex;
  flex-direction:column;
  justify-content: center;
  align-items: center;
}
.psybtn{
  border-radius: 50%;
  display:flex;
  flex-direction:column;
  justify-content: center;
  align-items: center;
  width: 55px;
  height: 50px;
  padding-bottom: 5px;
}
